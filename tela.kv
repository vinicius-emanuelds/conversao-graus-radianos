BoxLayout:
    orientation: 'vertical'
    padding: [dp(10), dp(20)]
    spacing: dp(10)
    
    Label:
        id: menu_label
        text: 'Conversor de Graus em Radianos'
        font_size: '24sp'
        size_hint_y: None
        height: dp(40)
        halign: 'center'
        valign: 'middle'
        
    BoxLayout:
        orientation: 'horizontal'
        spacing: dp(10)
        size_hint_y: None
        height: dp(40)

        TextInput:
            id: input_value
            hint_text: 'Insira o valor'
            font_size: '18sp'
            size_hint: 0.7, None
            height: dp(40)

        Spinner:
            id: conversion_type
            text: 'Escolha a Conversão'
            values: ['Graus para Radianos', 'Radianos para Graus']
            size_hint: 0.3, None
            height: dp(40)
            font_size: '18sp'
    
    Button:
        text: 'Converter'
        size_hint_y: None
        height: dp(50)
        font_size: '18sp'
        on_press: app.converter()
    
    Label:
        id: output_label
        text: 'Resultado:'
        font_size: '20sp'
        size_hint_y: None
        height: dp(40)
        halign: 'center'
        valign: 'middle'
    
    Widget:  # Preenche o espaço restante para ajustar o layout
        size_hint_y: 1
